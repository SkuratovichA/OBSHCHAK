{
  "name": "OBSHCHAK",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "packages/**"
  ],
  "engines": {
    "node": "18.18.0",
    "yarn": "^1.22.5"
  },
  "dependencies": {
    "@mui/material": "^5.14.10",
    "concurrently": "7.0.0",
    "framer-motion": "^10.16.4",
    "prettier": "^3.0.3",
    "socket.io-client": "^4.7.2",
    "typescript": "5.1.6"
  },
  "scripts": {
    "watch": "tsc -b -w packages/common/tsconfig.json packages/api/tsconfig.json",
    "build": "yarn build-client && yarn build-api",
    "build-client": "yarn workspace @OBSHCHAK/client build",
    "build-api": "yarn workspace @OBSHCHAK/api build",
    "clean-build": "rm -rf packages/*/{lib,build,tsconfig.tsbuildinfo}",
    "start": "concurrently -n client,server 'yarn start-client' 'yarn start-api' --kill-others",
    "start-client": "yarn workspace @OBSHCHAK/client start",
    "start-api": "yarn workspace @OBSHCHAK/api start",
    "prettify": "prettier --write \"packages/**/*.{ts,tsx}\""
  },
  "packageManager": "yarn@3.1.4"
}
