{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "18.18.0",
    "yarn": "^1.22.5"
  },
  "dependencies": {
    "@mui/material": "latest",
    "concurrently": "7.0.0",
    "framer-motion": "latest",
    "lodash": "latest",
    "prettier": "^3.0.3",
    "socket.io-client": "latest",
    "typescript": "latest"
  },
  "devDependencies": {
    "@types/lodash": "latest",
    "@types/node": "latest"
  },
  "scripts": {
    "watch": "tsc -b -w packages/common/tsconfig.json packages/api/tsconfig.json",
    "build": "yarn build-client && yarn build-api",
    "build-client": "yarn workspace app-client build",
    "build-api": "yarn workspace app-api build",
    "clean-build": "rm -rf packages/*/{lib,build,tsconfig.tsbuildinfo}",
    "start": "concurrently -n client,server 'yarn start-client' 'yarn start-api' --kill-others",
    "start-client": "yarn workspace app-client start",
    "start-api": "yarn workspace app-api start",
    "prettify": "prettier --write \"packages/**/*.{ts,tsx}\""
  },
  "packageManager": "yarn@3.1.4"
}
